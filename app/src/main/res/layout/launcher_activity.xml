<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <Button
        android:id="@+id/simple_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/static_screen"/>

    <Button
        android:id="@+id/dynamic_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dynamic_screen"/>


    <Button
        android:id="@+id/bp_arch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bp_arch_screen"/>

    <Button
        android:id="@+id/custom_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_screen"/>
</LinearLayout>
