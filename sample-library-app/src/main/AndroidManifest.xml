<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xfinity.blueprint_sample_library_app">

    <application
        android:name=".BlueprintSampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.xfinity.blueprint_sample_library_app.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.xfinity.blueprint_sample_library_app.StaticScreenActivity" android:label="@string/static_screen"/>
        <activity android:name="com.xfinity.blueprint_sample_library_app.DynamicScreenActivity" android:label="@string/dynamic_screen"/>
        <activity android:name="com.xfinity.blueprint_sample_library.ArchitectSampleActivity" android:label="@string/bp_arch_screen"/>
    </application>

</manifest>